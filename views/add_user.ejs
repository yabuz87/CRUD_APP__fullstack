<%-include('./layout/header.ejs')%>
<div class="container-lg">
    <div class="row">
        <div class="col-lg-6 mx-auto mt-4">
          <div class="card shaow">
            <div class="card-header bg-dark">
                <h3 class="text-light text-center">Add New User</h3>
            </div>
            <div class="card-body p-4">
                <form action="/add" method="post" id="add-form" enctype="multipart/form-data">
                    <div class="mb-3">
                        <label for="name" class="fw-bold fs-5">Name</label>
                        <input type="text" name="name" class="form-control shadow form-control-lg" placeholder="Enter you Name">
                    </div>
                    <div class="mb-3">
                        <label for="email" class="fw-bold fs-5">Email</label>
                        <input type="email" name="email" class="form-control shadow form-control-lg" placeholder="Enter your email">
                    </div>
                    <div class="mb-3">
                        <label for="phone" class="fw-bold fs-5">Phone</label>
                        <input type="tel" name="phone" class="form-control shadow form-control-lg" placeholder="+251">
                    </div>
                    <div class="mb-3">
                        <label for="image" class="form-label fs-5 fw-bold">select Image</label>
                        <input type="file" name="image" class="form-control shadow form-control-lg" placeholder="+251">
                    </div>
                    <div class="card-header text=center">
                        <button class=" btn btn-secondary text-center m-2 w-50">Add User</button>
                    </div> 
                </form>
            </div>
            
            </div>
        </div>
    </div>
</div>
